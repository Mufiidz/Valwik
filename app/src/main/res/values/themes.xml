<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Valwik" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Valwik.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.Valwik</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
    </style>
</resources>